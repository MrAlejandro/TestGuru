<%= render "shared/errors", resource: @badge %>

<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t(".quantity_condition") %><br>
    <%= form.select(:quantity_condition) do %>
      <% @badge.quantity_conditions.each do |condition| %>
        <%= content_tag(:option, t(".#{condition}"), value: condition, selected: condition == @badge.quantity_condition) %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label t(".category_condition") %><br>
    <%= form.select(:category_id) do %>
      <%= content_tag(:option, t(".select_category"), value: "") %>
      <% avail_categories.each do |category| %>
        <%= content_tag(:option, category.title, value: category.id, selected: category.id == @badge.category_id) %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label t(".level_condition") %><br>
    <%= form.select(:test_level) do %>
      <%= content_tag(:option, t(".select_level"), value: "") %>
      <% avail_test_levels.each do |test_level, level_code| %>
        <%= content_tag(:option, test_level(test_level), value: test_level, selected: test_level == @badge.test_level) %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label t(".first_try_condition") %><br>
    <%= form.check_box :first_try, class: "form-control" %>
  </div>

  <div class="mt-1">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
