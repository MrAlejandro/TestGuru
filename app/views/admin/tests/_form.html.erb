<%= render "shared/errors", resource: @test %>

<%= form_with model: [:admin, @test], local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :level %><br>
    <%= form.text_field :level, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :time_limit %><br>
    <%= form.text_field :time_limit, class: "form-control" %>
  </div>

  <div class="mt-1">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
