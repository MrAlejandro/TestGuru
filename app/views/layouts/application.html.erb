<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="nav user">
      <span class="project-name">
        <%= link_to "Test Guru Project", root_path %>:
      </span>
      <% if logged_in? %>
        Welcome, <b><%= current_user.name %></b> Guru |
        <%= link_to "Log out", logout_path, method: :post %>
      <% else %>
        <%= link_to "Log in", login_path %> | <%= link_to "Register", signup_path %>
      <% end %>
    </p>

    <%= yield %>

    <%= render "shared/footer" %>
  </body>
</html>
