<h1><%= t(".header") %></h1>

<%= render "shared/errors", resource: @feedback %>

<%= form_with model: @feedback, local: true do |form| %>
  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mt-1">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

